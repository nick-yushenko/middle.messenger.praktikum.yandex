<div class="profile">

  <div class="profile-info">

    <div class="avatar">
      <div class="placeholder">
        {{{Icon name="img-icon"  width=40 height=40}}}
      </div>
    </div>

    <span class="username">Джон Уик</span>

    <div class="profile-data">
      <div class="profile-data__item">
        <span class="hint">Почта</span>
        <span class="value">pochta@yandex.ru</span>
      </div>
      <div class="profile-data__item">
        <span class="hint">логин</span>
        <span class="value">ivanivanov</span>
      </div>
      <div class="profile-data__item">
        <span class="hint">Имя</span>
        <span class="value">Джон</span>
      </div>
      <div class="profile-data__item">
        <span class="hint">Фамилия</span>
        <span class="value">Уик</span>
      </div>
      <div class="profile-data__item">
        <span class="hint">Имя в чате</span>
        <span class="value">Иван</span>
      </div>
      <div class="profile-data__item">
        <span class="hint">Телефон</span>
        <span class="value">+7 (999) 999 99-99</span>
      </div>
    </div>

    <div class="profile-actions">
      {{{Link className="profile-action" ref_name="Изменить данные" type="button" onClick=this.actions.editProfile}}}
      {{{Link className="profile-action" ref_name="Изменить пароль" type="button" onClick=this.actions.editPassword}}}
      {{{Link className="profile-action logout" ref_name="Выйти" type="button" onClick=this.actions.logout}}}
    </div>
  </div>

</div>
