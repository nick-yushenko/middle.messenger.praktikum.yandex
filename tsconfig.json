{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",

    "noEmit": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,

    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
