{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "commonjs": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],

  "parserOptions": {
    "sourceType": "module"
  },

  "rules": {
    "no-unused-vars": "off",
    "no-extra-semi": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 100
      }
    ]
  }
}
